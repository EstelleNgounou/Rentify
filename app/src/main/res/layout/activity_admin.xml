<!-- File: res/layout/activity_admin.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E1F5FE"
    android:gravity="center_vertical">

    <!-- Welcome Message (Centered Text) -->
    <LinearLayout
        android:id="@+id/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Welcome back"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:focusable="false"
            android:cursorVisible="false"
            android:textColor="#0288D1"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Admin Text (Centered Text) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="       Admin!"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:focusable="false"
            android:cursorVisible="false"
            android:textColor="#0288D1"
            android:background="@android:color/transparent"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>

    <!-- Add Category Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:textColor="#FFFFFF"
            android:background="#0288D1"
            android:textSize="16sp"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- List Categories Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonListCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Categories"
            android:textColor="#FFFFFF"
            android:background="#0288D1"
            android:textSize="16sp"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- List Users Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonListUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Users"
            android:textColor="#FFFFFF"
            android:background="#0288D1"
            android:textSize="16sp"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>
