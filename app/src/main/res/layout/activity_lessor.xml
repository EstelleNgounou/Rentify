<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lessor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_alignParentTop="true">

    <TextView
        android:id="@+id/lessorDashboardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Lessor Dashboard"
        android:textSize="35sp"
        android:textColor="#0288D1"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_select_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0288D1"
        android:text="Add Item"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0288D1"
        android:text="List Items"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_view_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0288D1"
        android:text="View Requests"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />
</LinearLayout>
