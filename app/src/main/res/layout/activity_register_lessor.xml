<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#E0F7FA"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as Lessor"
        android:textSize="30sp"
        android:textColor="#0277BD"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/firstNameLessor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:hint="First Name"
        android:inputType="text"
        android:backgroundTint="#81D4FA"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#0277BD"
        android:textColorHint="#B3E5FC"/>

    <EditText
        android:id="@+id/lastNameLessor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:hint="Last Name"
        android:inputType="text"
        android:backgroundTint="#81D4FA"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#0277BD"
        android:textColorHint="#B3E5FC"/>

    <EditText
        android:id="@+id/emailLessor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="#81D4FA"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#0277BD"
        android:textColorHint="#B3E5FC"/>

    <EditText
        android:id="@+id/passwordLessor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:backgroundTint="#81D4FA"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#0277BD"
        android:textColorHint="#B3E5FC"/>

    <Button
        android:id="@+id/registerLessorButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Register as Lessor"
        android:textColor="#ffffff"
        android:backgroundTint="#0288D1"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
